<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="th.pd"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@null"
        android:label="@string/app_label"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main"
            android:label="@string/app_label" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="th.demo.Demo" />
        <activity android:name="th.mock.MockFileManager" />
        <activity
            android:name="th.melody.MelodyActivity"
            android:label="thMelody"
            android:taskAffinity=".melody"
            android:theme="@style/melodyTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="th.mediaPlay.ImageActivity"
            android:label="Image Viewer"
            android:theme="@style/mediaPlayTheme" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:mimeType="image/*"
                    android:scheme="content" />
                <data
                    android:mimeType="image/*"
                    android:scheme="file" />
                <data
                    android:mimeType="image/*"
                    android:scheme="http" />
                <data
                    android:mimeType="image/*"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name="th.mediaPlay.VideoActivity"
            android:label="Video Player"
            android:theme="@style/mediaPlayTheme" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:mimeType="video/*"
                    android:scheme="content" />
                <data
                    android:mimeType="video/*"
                    android:scheme="file" />
                <data
                    android:mimeType="video/*"
                    android:scheme="http" />
                <data
                    android:mimeType="video/*"
                    android:scheme="https" />
                <data
                    android:mimeType="video/*"
                    android:scheme="mms" />
                <data
                    android:mimeType="video/*"
                    android:scheme="rtsp" />
            </intent-filter>
        </activity>
    </application>

</manifest>
