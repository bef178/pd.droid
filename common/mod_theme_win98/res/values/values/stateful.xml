
<!--
  a state is represented by 3 items: fg(text) bg and decoration(border)
  elemental states: disabled,checked,visited,default
  additive indepedent state: focused,hovered,pressed
 -->
<resources>
  <color name="stateful_state_disabled">@color/dev_grayC</color>
  <color name="stateful_state_as_if_focused">@color/stateful_state_focused</color>
  <color name="stateful_state_focused">@color/dev_light_yellow</color>
  <color name="stateful_state_hovered">@color/dev_light_cyan</color>
  <color name="stateful_state_pressed">@color/dev_light_green</color>
  <color name="stateful_state_checked">@color/dev_light_blue</color>
  <color name="stateful_state_visited">@color/dev_light_magenta</color>
  <color name="stateful_state_default">@color/dev_white</color>
  <color name="stateful_state_default_fg">@color/dev_gray3</color>

  <style name="stateful.Text" parent="">
    <item name="android:background">@drawable/stateful_text_bg</item>
    <item name="android:textColor">@drawable/stateful_text_fg</item>
    <item name="android:textSize">14sp</item>
  </style>

  <declare-styleable name="stateful">
    <attr name="state_disabled" format="boolean"/>
    <attr name="state_as_if_focused" format="boolean"/>
    <attr name="state_focused" format="boolean"/>
    <attr name="state_hovered" format="boolean"/>
    <attr name="state_pressed" format="boolean"/>
    <attr name="state_checked" format="boolean"/>
    <attr name="state_visited" format="boolean"/>
    <!-- itemDefault -->
  </declare-styleable>

  <string name="stateful_state_disabled">disabled item_d</string>
  <string name="stateful_state_as_if_focused">as if focused item_f</string>
  <string name="stateful_state_focused">focused item_f</string>
  <string name="stateful_state_hovered">hovered item_h</string>
  <string name="stateful_state_pressed">pressed item_p</string>
  <string name="stateful_state_checked">checked item_c</string>
  <string name="stateful_state_visited">visited item_v</string>
  <string name="stateful_state_default">default item</string>
</resources>
