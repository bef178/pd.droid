<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="116dp"
    android:layout_gravity="top|start"
    android:background="@drawable/pageheader_background"
    android:orientation="horizontal"
    android:visibility="gone" >

    <LinearLayout
        android:id="@+id/actionPageHeaderBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="76dp"
        android:orientation="horizontal"
        android:paddingEnd="20dp"
        android:paddingStart="20dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:contentDescription="@null"
            android:src="@drawable/pageheader_leftarrow_selector"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/pageheader_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:contentDescription="@null"
            android:src="@null"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp" >

            <TextView
                android:id="@+id/pageheader_title"
                style="@style/pageheader_title_text_style"
                android:textColor="@drawable/pageheader_text_color_selector"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/pageheader_summary"
                style="@style/pageheader_title_text_style"
                android:layout_marginStart="1dp"
                android:layout_marginTop="4dp"
                android:textColor="#99FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pageheader_option_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end"
        android:minHeight="76dp"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingEnd="28dp"
        android:paddingStart="28dp"
        android:paddingTop="16dp" >

        <TextView
            android:id="@+id/pageheader_option_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:text="more..." />
    </LinearLayout>

</LinearLayout>
