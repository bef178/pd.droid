<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <layer-list>
      <item android:drawable="@drawable/classic_button_p"/>
      <item android:drawable="@drawable/classic_button_mask_focused"/>
    </layer-list>
  </item>
  <item android:state_focused="true"
    android:state_hovered="true">
    <layer-list>
      <item android:drawable="@drawable/classic_button_1"/>
      <item android:drawable="@drawable/classic_button_mask_focused"/>
    </layer-list>
  </item>
  <item android:state_focused="true">
    <layer-list>
      <item android:drawable="@drawable/classic_button_flat"/>
      <item android:drawable="@drawable/classic_button_mask_focused"/>
    </layer-list>
  </item>
  <item android:drawable="@drawable/classic_button_1"
    android:state_hovered="true"/>
  <item android:drawable="@drawable/classic_button_flat"/>
</selector>
