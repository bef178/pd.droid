<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/classic_titlebar_bg"
    android:orientation="horizontal"
    android:padding="2dp" >

    <FrameLayout
        android:id="@+id/btnIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginEnd="2dp"
        android:addStatesFromChildren="true"
        android:clickable="true"
        android:maxWidth="26dp" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:contentDescription="@null"
            android:src="@null" />
    </FrameLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:textColor="#FFF"
        android:textSize="12sp" />

    <FrameLayout
        android:id="@+id/btnResize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginEnd="2dp"
        android:addStatesFromChildren="true"
        android:clickable="true"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:contentDescription="@null"
            android:src="@drawable/classic_titlebar_resize_selector" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnMinimize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:addStatesFromChildren="true"
        android:clickable="true" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:contentDescription="@null"
            android:src="@drawable/classic_titlebar_minimize_selector" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnMaximize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="1px"
        android:addStatesFromChildren="true"
        android:clickable="true" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:contentDescription="@null"
            android:src="@drawable/classic_titlebar_maximize_selector" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="2dp"
        android:addStatesFromChildren="true"
        android:clickable="true" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:contentDescription="@null"
            android:src="@drawable/classic_titlebar_close_selector" />
    </FrameLayout>

</LinearLayout>
