<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
  <style name="theme.win98" parent="android:Theme.Holo.Light">
    <item name="android:textColor">#333</item>
    <item name="android:windowBackground">@drawable/win98_window_bg</item>
  </style>
  <style name="theme.win98.Button">
    <item name="android:background">@drawable/win98_button</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">6dp</item>
    <item name="android:textSize">14sp</item>
  </style>
  <style name="theme.win98.Button.Flat">
    <item name="android:background">@drawable/win98_button_flat</item>
  </style>
  <style name="theme.win98.Edit">
    <item name="android:background">@drawable/win98_edit_bg</item>
  </style>

  <!-- titlebar spacing 2; button 16x14; font 12 -->
  <dimen name="win98_titlebar_spacing">3dp</dimen>
  <dimen name="win98_titlebar_text_size">18sp</dimen>
  <style name="theme.win98.Titlebar"/>
  <style name="theme.win98.Titlebar.Icon">
    <item name="android:layout_width">21dp</item>
    <item name="android:layout_height">21dp</item>
    <item name="android:layout_gravity">center_vertical|start</item>
    <item name="android:clickable">true</item>
  </style>
  <style name="theme.win98.Titlebar.Button" parent="theme.win98.Titlebar.Icon">
    <item name="android:layout_width">24dp</item>
  </style>

  <declare-styleable name="theme.win98"/>
  <dimen name="win98_tab_container_height">32dp</dimen>
  <dimen name="win98_tab_height">28dp</dimen>
</resources>
