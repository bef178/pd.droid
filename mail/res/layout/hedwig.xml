<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/classic_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_ccc_lr"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/tabContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_ccc_b"
            android:orientation="horizontal"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/subjectRow"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/border_ccc_b"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/labelSubject"
                style="@style/compose_label.stateful"
                android:text="@string/subject0" />

            <EditText
                android:id="@+id/subject"
                style="@style/compose_edit"
                android:hint="@null"
                android:singleLine="true"
                android:textColor="@color/compose_subject_text"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <Button
                android:id="@+id/btnAttach0"
                style="@style/compose_label.stateful"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="@string/attach" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/attachmentRow"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/border_ccc_b"
            android:orientation="horizontal"
            android:visibility="gone" >

            <Button
                style="@style/compose_label.stateful"
                android:text="@string/attach" />

            <View style="@style/compose_edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recipientRow"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/border_ccc_b"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/labelRecipient"
                style="@style/compose_label.stateful"
                android:text="@string/recipient0" />

            <EditText
                android:id="@+id/recipient"
                style="@style/compose_edit"
                android:hint="@null"
                android:textColor="@color/compose_recipient_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ccRow"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/border_ccc_b"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                style="@style/compose_label"
                android:text="@string/cc" />

            <EditText
                android:id="@+id/cc"
                style="@style/compose_edit"
                android:hint="@null"
                android:textColor="@color/compose_cc_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bccRow"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/border_ccc_b"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                style="@style/compose_label"
                android:text="@string/bcc" />

            <EditText
                android:id="@+id/bcc"
                style="@style/compose_edit"
                android:hint="@null"
                android:textColor="@color/compose_bcc_text" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/border_ccc_b" >

            <EditText
                android:id="@+id/mailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:background="@null"
                android:gravity="top|start"
                android:hint="@null"
                android:inputType="textMultiLine"
                android:minHeight="100dp"
                android:padding="8dp"
                android:textColor="@color/compose_text"
                android:textSize="14sp"
                android:typeface="normal" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@drawable/border_ccc_b"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/btnSend"
                style="@style/themeClassic.button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/send" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
