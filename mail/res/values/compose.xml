<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="themeMailCompose" parent="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <dimen name="compose_titlebar_move_margin_top">22dp</dimen>
    <dimen name="compose_titlebar_move_margin_right">-400dp</dimen>
    <dimen name="compose_titlebar_move_margin_bottom">0dp</dimen>
    <dimen name="compose_titlebar_move_margin_left">-400dp</dimen>

    <dimen name="compose_tab_height">@dimen/classic_tab_height</dimen>
    <color name="compose_tab_text">#33000000</color>
    <color name="compose_tab_text_current">@color/compose_text</color>

    <color name="compose_text">#333</color>
    <color name="compose_subject_text">@color/compose_text</color>
    <color name="compose_recipient_text">#666</color>
    <color name="compose_cc_text">#888</color>
    <color name="compose_bcc_text">#AAA</color>

    <style name="compose_label">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:background">#00000000</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/compose_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="compose_label.stateful">
        <item name="android:background">@drawable/win98_button_flat</item>
    </style>

    <style name="compose_edit" parent="@style/theme.win98.Edit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>
